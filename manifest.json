{
  "manifest_version": 3,
  "name": "nTabManager",
  "version": "2.0.0",
  "description": "Real-time duplicate tab detection and automatic closure. Keeps your browser clean by automatically closing duplicate tabs as soon as they're opened.",
  "author": "Your Name",
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "nTabManager - Duplicate Tab Detection",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },

  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
} 